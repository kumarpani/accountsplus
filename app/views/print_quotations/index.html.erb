<div class="printLeft"><%= image_tag 'ap.jpg', :width => '63%'%></div>
<div>
  <p class="printLeft printRight">
    <%=ApplicationHelper::ADD_LINE1%><br/>
    <%=ApplicationHelper::ADD_LINE2%><br/>
    <%=ApplicationHelper::ADD_LINE3%><br/>
    Tele Fax: <%=ApplicationHelper::TELEPHONE%>, Cell: <%=ApplicationHelper::MOBILE%><br/>
    Email: <%=ApplicationHelper::EMAIL%>
  </p>
</div>
<p><hr class="hr"></p>

<h2 style="text-align: center; font-size: 17px;"><b>
  <%=get_header_for_quotation(@quotation)%>
</b></h2>

<div class="">
  <div class="printLeft">
    <% if @quotation.is_a_complete_tax_invoice?  or @quotation.is_a_complete_tax_exempted_invoice?%>
      Invoice No: <%= @quotation.invoice_number %>
      <br/>
    <% else %>
      <%#
        # No need to show quotation number for now
        #Quotation No: <%= @quotation.id %>
      <br/>
    <% end %>
    To:
      <b><%= @quotation.client.company_name %></b>,<br/>
      <%= @quotation.client.address %>
  </div>
  <div >
    <p class="printLeft printRight">
      Date: <%= display_date(self.get_display_date(@quotation)) %><br/>

      Event Date: <%= display_date(@quotation.event_date) %><br/>

      <% if !@quotation.venue.nil? %>
          Venue: <%= @quotation.venue %><br/>
      <% end %>

      <% if !@quotation.order_placed_by.nil? %>
          Order Placed By: <%= @quotation.order_placed_by %>
      <% end %>
    </p>
  </div>
</div>
<br/>

<% if @quotation.is_a_complete_tax_invoice? or @quotation.is_a_complete_tax_exempted_invoice?%>
    <p class="printTaxDetails">Service Tax Number : AKAPP9970EST001 </p>
<%end%>

<div class="">
  <table class="printInvoiceTable table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
      <th>Sl. No.</th>
      <th>Particulars</th>
      <th>Quantity</th>
      <th>Days</th>
      <th>Price</th>
    </tr>
    </thead>

    <tbody>
    <% @quotation.item_details.sort_by{|i| i[:created_at]}.each_with_index do |item_detail, index| %>
      <tr>
        <td class="alignCenter"><%= index + 1 %></td>
        <td><%= item_detail.particulars %></td>
        <td class="alignCenter"><%= item_detail.quantity %></td>
        <td class="alignCenter"><%= item_detail.days %></td>
        <td class="alignRight"><%= number_with_precision(item_detail.price, :precision => 2) %></td>
      </tr>
    <% end %>
    <tr>
      <td></td><td><strong>Total:</strong></td><td></td><td></td>
      <td class="alignRight"><b><%= number_with_precision(@quotation.total_item_price, :precision => 2) %></b></td>
    </tr>
    <% if @quotation.is_a_complete_tax_invoice?  or @quotation.is_a_complete_tax_exempted_invoice?%>
        <tr>
          <td></td>
          <td>Service Tax @ 12%</td>
          <td></td><td></td>
          <td class="alignRight"><%= @quotation.service_tax_at_12_percent %></td>
        </tr>
        <tr>
          <td></td>
          <td>Education Cess @ 2% (On S.T)</td>
          <td></td><td></td>
          <td class="alignRight"><%= @quotation.education_cess %></td>
        </tr>
        <tr>
          <td></td>
          <td>Sec. & Higher Edu. Cess @ 1% (On S.T)</td>
          <td></td><td></td>
          <td class="alignRight"><%= @quotation.higher_education_cess %></td>
        </tr>
        <tr>
          <td></td><td><strong>Total with taxes (rounded off):</strong></td><td></td><td></td>
          <td class="alignRight"><b><%= number_with_precision(@quotation.total_price, :precision => 2) %></b></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <p class="printRight">Rupees: <%= @quotation.total_price.to_i.rupees%></p>
  <br>

  <% if params[:print_service_taxes] == 'true' && (@quotation.is_a_complete_tax_invoice?  or @quotation.is_a_complete_tax_exempted_invoice?) %>
    <strong style="font-size: 11px">Account Details for NEFT or RTGS</strong>
      <table class="printInvoiceTable table-bordered" style="width: 100%">
      <tbody>
      <tr>
        <td>Account Name</td>
        <td><%=ApplicationHelper::BANK_ACC_NAME%></td>
      </tr>
      <tr>
        <td>Name of the Bank & Branch</td>
        <td><%=ApplicationHelper::BANK_NAME_BRANCH%></td>
      </tr>
      <tr>
        <td>Bank Account Number</td>
        <td><%=ApplicationHelper::BANK_ACC_NUM%></td>
      </tr>
      <tr>
        <td>Type of Account</td>
        <td><%=ApplicationHelper::BANK_TYPE_OF_ACC%></td>
      </tr>
      <tr>
        <td>IFSC Code</td>
        <td><%=ApplicationHelper::BANK_IFSC%></td>
      </tr>
      <tr>
        <td>MICR Code</td>
        <td><%=ApplicationHelper::BANK_MIRC%></td>
      </tr>
      </tbody>
    </table>
  <%end%>

  <% if !@quotation.is_a_complete_tax_invoice? %>
    <% if !@quotation.tac.nil? %>
      <ul class="tac">
        <strong>Terms and Conditions:</strong>
        <% @quotation.tac.each do |t| %>
          <li><%= t %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
  <br>
  <p class="printLeft">
    For <%=ApplicationHelper::NAME%><br/><br/><br/></br>
    Authorized Signatory
  </p>
</div>

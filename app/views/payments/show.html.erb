<div class="header">
  <h1 class="col-md-6 col-md-offset-2 companyName"><%=@payment.client.company_name%></h1>
  <div><h2 class="col-md-4 col-md-offset-0"><%= current_user.email %> | <%=display_verbose_date(DateTime.now)%></h2></div>
</div>


<div class="belowHeader">
    <p id="notice"><%= notice %></p>

    <h3>Payment Details</h3>

    <table class="table table-striped">
      <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
          <tr>
            <td><strong>Client</strong></td>
            <td><%= @payment.client.company_name %></td>
          </tr>
          <tr>
            <td><strong>Description</strong></td>
            <td><%= @payment.description %></td>
          </tr>
          <tr>
            <td><strong>Mode</strong></td>
            <td><%= @payment.mode %></td>
          </tr>
          <tr>
            <td><strong>Paid on</strong></td>
            <td><%= @payment.paid_on.strftime("%d/%m/%Y")%></td>
          </tr>
          <tr>
            <td><strong>Amount</strong></td>
            <td><%= @payment.amount %></td>
          </tr>
          <tr>
            <td><strong>Type</strong></td>
            <td><%= @payment.payment_type %></td>
          </tr>
          <tr>
            <td><strong>Added By</strong></td>
            <td><%= @payment.payment_added_by %></td>
          </tr>
          <tr>
            <td><strong>Last Modified By</strong></td>
            <td><%= @payment.payment_last_modified_by %></td>
          </tr>

      </tbody>
    </table>


    <p>
      <% if policy(@payment).update? %>
        <%= link_to 'Edit', edit_payment_path(@payment), class: :edit%>
      <%end%>

      <%= link_to 'Print PDF', :controller => 'payments', :action => 'print', :format => 'pdf', :payment_type => @payment.payment_type%>
      <% if policy(@payment).destroy? %>
          <%= button_to 'X', payment_path(), {:onclick => "return confirm('WARNING : Are you sure to DELETE this Payment Permanently? You will not be able to UnDo this')", :method=>:delete, :class => 'deleteBtn'} %>
      <%end%>
    </p>

    <%= link_to 'Back', payments_path(:client_id => @payment.client_id, :company_name => @payment.client.company_name) %>
</div>
<div class="header">
    <h1 class="col-md-6 col-md-offset-2 companyName"><%= @client.company_name %></h1>
    <div><h2 class="col-md-4 col-md-offset-0"><%= current_user.email %> | <%=display_verbose_date(DateTime.now)%></h2></div>
</div>

<div class="belowHeader">
    <ul class="nav nav-tabs nav-tabs-ul">
      <li class="active disabled"><a href="#">Home</a></li>
      <li class="#"><%= link_to 'Quotations', quotations_path(:client_id => @client.id, :status => [STATUS_PENDING, STATUS_CONFIRMED, STATUS_CLOSED])%></li>
      <li class="#"><%= link_to 'Invoices', quotations_path(:client_id => @client.id, :status => [STATUS_INVOICE])%></li>
      <li class="#"><%= link_to 'Payments', payments_path(:client_id => @client.id, :company_name => @client.company_name)%></li>
      <li class="#"><%= link_to 'Ledger', client_ledgers_path(@client.id)%></li>
    </ul>

    <br>
    <p class="headerAfter"><%= link_to 'Edit Client Details', edit_client_path(@client), class: 'edit' %></p>
    <br><br>

    <div class="col-md-9">

    <table class="table table-striped table-bordered gridData">
      <tbody>
          <tr>
            <td><strong>Contact Person Name:</strong></td>
            <td><%= @client.contact_person_name %></td>
            </tr>
          <tr>
            <td><strong>Address:</strong></td>
            <td><%= @client.address %></td>
            </tr>
          <tr>
            <td><strong>Phone Number:</strong></td>
            <td><%= @client.phone_number %></td>
            </tr>
          <tr>
            <td><strong>Phone Number 2</strong>:</td>
            <td><%= @client.phone_number_1 %></td>
            </tr>
          <tr>
            <td><strong>Email:</strong></td>
            <td><%= @client.email %></td>
            </tr>
          <tr>
            <td><strong>Email 2:</strong></td>
            <td><%= @client.email_1 %></td>
          </tr>


      </tbody>
    </table>
    </div>
</div>
